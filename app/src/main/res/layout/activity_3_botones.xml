<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/const_lay_3btns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo_pantalla"
    tools:context=".Activity_3_botones">

    <TextView
        android:id="@+id/textoPantalla"
        android:layout_width="317dp"
        android:layout_height="385dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/shpinscher"
        android:gravity="center|top"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/boton1"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:inputType="text"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:scrollbarSize="0dp"
        android:text="Button"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoPantalla"
        app:layout_constraintVertical_bias="0.22000003" />

    <Button
        android:id="@+id/boton2"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:capitalize="none"
        android:inputType="text"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:scrollbarSize="0dp"
        android:text="Button"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:layout_constraintVertical_bias="0.02" />

    <Button
        android:id="@+id/boton3"
        android:layout_width="300dp"
        android:layout_height="22dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:capitalize="none"
        android:inputType="text"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:scrollbarSize="0dp"
        android:text="Button"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:layout_constraintVertical_bias="0.03" />

</androidx.constraintlayout.widget.ConstraintLayout>